<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            type="text"
            name="title"
            placeholder="Title Yha pr aayega"
            class="block w-full px-5 py-2 outline-none rounded-md bg-zinc-800"
          />
          <input
            name="details"
            placeholder="Write about your task"
            class="block w-full mt-2 px-5 py-2 w-full rounded-md outline-none resize-none bg-zinc-800"
          />
          <input
            type="submit"
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
            value="Create task"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap p-10">
        <% if(files.length>0){%> <% files.forEach(function(val){%>
        <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
          <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
          <div class="flex w-full justify-between items-center mt-3">
            <a href="/file/<%= val%>" class="text-blue-500 inline-block mt-3"
              >Read More..</a
            >
            <a href="/edit/<%= val%>" class="text-zinc-600">Edit</a>
          </div>
        </div>

        <%})%> <%} else {%>
        <h3 class="tezt-zinc-600">No Task Yet</h3>

        <% }%>
      </div>
    </div>
  </body>
</html>
